        <button type="submit">حفظ</button>
    </div>
</div>
<%-include('../partials/messages.ejs')-%>
<div class="border-t-2 flex flex-col">
   <div class="border-t-2 border-b-2 p-3">
        <h1 class="text-lime-500 font-bold">*اسمك</h1>
        <textarea class="w-full outline-none resize-none overflow-hidden h-8 pt-2 whitespace-nowrap" rows="1" name="name" id="name" placeholder="اسمك"><%if(locals.user){%><%= user.name%><%}%></textarea>
    </div>
    <div class="border-t-2 border-b-2 p-3">
        <h1 class="text-lime-500 font-bold">*النبذه التعريفية</h1>
        <textarea class="w-full outline-none resize-none overflow-hidden min-h-7 p-2" name="description" id="description"
            placeholder="قدم نفسك للأخرين وعرفهم بنفسك."><%if(locals.user){%><%= user.description %><%}%></textarea>
    </div>
</div>
</form>